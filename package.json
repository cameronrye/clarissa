{
  "name": "clarissa",
  "version": "1.4.0",
  "description": "An AI-powered terminal assistant with tool execution capabilities",
  "author": "Cameron Rye <cameron@rye.dev> (https://rye.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameronrye/clarissa.git"
  },
  "homepage": "https://clarissa.run",
  "bugs": {
    "url": "https://github.com/cameronrye/clarissa/issues"
  },
  "keywords": [
    "ai",
    "agent",
    "cli",
    "terminal",
    "openrouter",
    "llm",
    "mcp",
    "assistant",
    "claude",
    "gpt",
    "bun",
    "ink"
  ],
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "clarissa": "./src/index.tsx"
  },
  "files": [
    "src",
    "logo.svg",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun --hot run src/index.tsx",
    "test": "bun test",
    "test:apple-ai": "bun scripts/test-apple-ai.ts",
    "build": "bun run build:all",
    "build:current": "bun build --compile --minify src/index.tsx --outfile dist/clarissa",
    "build:macos-arm64": "bun build --compile --minify --target=bun-darwin-arm64 src/index.tsx --outfile dist/clarissa-macos-arm64",
    "build:macos-x64": "bun build --compile --minify --target=bun-darwin-x64 src/index.tsx --outfile dist/clarissa-macos-x64",
    "build:linux-x64": "bun build --compile --minify --target=bun-linux-x64 src/index.tsx --outfile dist/clarissa-linux-x64",
    "build:linux-arm64": "bun build --compile --minify --target=bun-linux-arm64 src/index.tsx --outfile dist/clarissa-linux-arm64",
    "build:windows-x64": "bun build --compile --minify --target=bun-windows-x64 src/index.tsx --outfile dist/clarissa-windows-x64.exe",
    "build:all": "bun run build:macos-arm64 && bun run build:macos-x64 && bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:windows-x64",
    "prepublishOnly": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/react": "^19.2.7",
    "ink-testing-library": "^4.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@lmstudio/sdk": "^1.5.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@openrouter/sdk": "^0.2.9",
    "ink": "^6.5.1",
    "ink-markdown": "^1.0.4",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "node-llama-cpp": "^3.14.4",
    "react": "^19.2.1",
    "react-devtools-core": "^7.0.1",
    "zod": "^4.1.13"
  },
  "optionalDependencies": {
    "@meridius-labs/apple-on-device-ai": "^1.6.2"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  },
  "trustedDependencies": [
    "node-llama-cpp"
  ]
}

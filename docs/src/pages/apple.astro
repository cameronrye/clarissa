<script>
  // Device tab switching with fade transition
  const tabs = document.querySelectorAll('.device-tab');
  const carousel = document.getElementById('screenshot-carousel');

  function switchDevice(device: string) {
    // Update tabs
    tabs.forEach(t => {
      const el = t as HTMLElement;
      const isActive = el.dataset.device === device;
      el.classList.toggle('active', isActive);
      el.setAttribute('aria-selected', String(isActive));
    });

    // Fade out current, switch, fade in
    if (carousel) {
      carousel.style.opacity = '0';
      carousel.style.transition = 'opacity 0.2s';
      setTimeout(() => {
        document.querySelectorAll<HTMLElement>('.carousel-track').forEach(track => {
          track.style.display = track.dataset.device === device ? '' : 'none';
        });
        updateDots();
        carousel.style.opacity = '1';
      }, 200);
    }
  }

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const device = (tab as HTMLElement).dataset.device;
      if (device) switchDevice(device);
    });
  });

  // Carousel dots
  function updateDots() {
    const dotsContainer = document.getElementById('carousel-dots');
    const activeTrack = document.querySelector('.carousel-track[style=""]') || document.querySelector('.carousel-track:not([style*="display:none"])');
    if (!dotsContainer || !activeTrack) return;

    const items = activeTrack.querySelectorAll('.screenshot-item');
    dotsContainer.innerHTML = '';
    items.forEach((_, i) => {
      const dot = document.createElement('span');
      dot.className = 'dot' + (i === 0 ? ' active' : '');
      dotsContainer.appendChild(dot);
    });

    // Track scroll position to update active dot
    const track = activeTrack as HTMLElement;
    track.addEventListener('scroll', () => {
      const scrollLeft = track.scrollLeft;
      const itemWidth = (items[0] as HTMLElement).offsetWidth + 24; // gap
      const activeIndex = Math.round(scrollLeft / itemWidth);
      dotsContainer.querySelectorAll('.dot').forEach((dot, i) => {
        dot.classList.toggle('active', i === activeIndex);
      });
    });
  }

  // Init dots on load
  updateDots();
</script>

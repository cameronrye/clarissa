---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;

const features = [
  {
    icon: 'sparkles',
    title: 'On-Device AI',
    description: 'Powered by Apple Foundation Models with Private Cloud Compute fallback. Your conversations stay private â€” no data leaves your device.'
  },
  {
    icon: 'chain',
    title: 'Tool Chains & Automation',
    description: 'Multi-step workflows with output piping between tools. Automate with time, location, and Focus mode triggers. 8 standalone Shortcuts actions.'
  },
  {
    icon: 'tools',
    title: 'Smart Agent',
    description: 'ReAct agent with 10 native tools, proactive intent detection, and real-time plan visibility via Live Activities and Dynamic Island.'
  },
  {
    icon: 'bell',
    title: 'Smart Notifications',
    description: 'Scheduled check-ins, meeting alerts with attendee context, and memory reminders for time-sensitive follow-ups.'
  },
  {
    icon: 'sync',
    title: 'Memory Intelligence',
    description: 'Categorized memories with confidence scoring, relevance ranking, deduplication, and iCloud sync with conflict resolution.'
  },
  {
    icon: 'widget',
    title: 'Widgets & Watch',
    description: 'Morning briefing widget, memory spotlight, and StandBy cards. Apple Watch companion with voice queries and quick actions.'
  },
  {
    icon: 'mic',
    title: 'Voice & Siri',
    description: 'SpeechAnalyzer transcription, Siri follow-up conversations, and 8+ Shortcuts actions for building custom automations.'
  },
  {
    icon: 'siri',
    title: 'Session Intelligence',
    description: 'Pin messages, tag conversations, star favorites, search across sessions, and edit or regenerate any message.'
  }
];
---

<Base title="Apple Apps" description="Clarissa for iOS and macOS - Native AI assistant powered by Apple Intelligence">

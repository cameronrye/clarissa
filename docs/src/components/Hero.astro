---
const base = import.meta.env.BASE_URL;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <svg class="hero-logo" viewBox="-12 -12 88 88" xmlns="http://www.w3.org/2000/svg" aria-label="Clarissa logo">
        <defs>
          <linearGradient id="heroGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#EC4899"/>
            <stop offset="50%" stop-color="#8B5CF6"/>
            <stop offset="100%" stop-color="#06B6D4"/>
          </linearGradient>
          <linearGradient id="prismGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#06B6D4">
              <animate attributeName="stop-color" values="#06B6D4;#8B5CF6;#EC4899;#06B6D4" dur="6s" repeatCount="indefinite"/>
            </stop>
            <stop offset="50%" stop-color="#8B5CF6">
              <animate attributeName="stop-color" values="#8B5CF6;#EC4899;#06B6D4;#8B5CF6" dur="6s" repeatCount="indefinite"/>
            </stop>
            <stop offset="100%" stop-color="#EC4899">
              <animate attributeName="stop-color" values="#EC4899;#06B6D4;#8B5CF6;#EC4899" dur="6s" repeatCount="indefinite"/>
            </stop>
          </linearGradient>
          <filter id="heroGlow" filterUnits="objectBoundingBox" x="-50%" y="-50%" width="200%" height="200%">
            <feGaussianBlur stdDeviation="2" result="blur1"/>
            <feGaussianBlur stdDeviation="4" result="blur2"/>
            <feMerge>
              <feMergeNode in="blur2"/>
              <feMergeNode in="blur1"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
        </defs>
        <polygon
          class="prism"
          points="32,4 60,56 4,56"
          fill="none"
          stroke="url(#prismGrad)"
          stroke-width="1.5"
          stroke-linejoin="round"
          filter="url(#heroGlow)"
        />
        <path
          d="M38,30 A9,9 0 1,0 38,44"
          fill="none"
          stroke="url(#heroGrad)"
          stroke-width="5"
          stroke-linecap="round"
          filter="url(#heroGlow)"
        />
      </svg>
      <h1 class="hero-title">
        <span class="gradient-text">Clarissa</span>
      </h1>
      <p class="hero-tagline">AI agent for your terminal and Apple devices</p>
      <p class="hero-description">
        A terminal CLI built with Bun and native iOS, macOS, and watchOS apps powered by Apple Intelligence. Execute tools, automate workflows, and extend with MCP.
      </p>
      <div class="hero-actions">
        <a href={`${base}docs/installation/`} class="btn btn-primary">Get Started</a>
        <a href="https://github.com/cameronrye/clarissa" class="btn btn-secondary" target="_blank" rel="noopener">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      </div>
      <div class="install-command">
        <code class="font-mono">bun install -g clarissa</code>
        <button class="copy-btn" data-copy="bun install -g clarissa" aria-label="Copy install command">
          <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
          </svg>
          <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span class="copy-label">Copied!</span>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const text = btn.getAttribute('data-copy');
      if (text) {
        await navigator.clipboard.writeText(text);
        btn.classList.add('copied');
        setTimeout(() => btn.classList.remove('copied'), 2000);
      }
    });
  });
</script>

<style>
  .hero {
    padding: clamp(3rem, 8vw, 5rem) 0 clamp(2rem, 5vw, 4rem);
    text-align: center;
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-logo {
    width: 160px;
    height: 160px;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw + 0.5rem, 4rem);
    margin-bottom: 1rem;
  }

  .hero-tagline {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .hero-description {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .install-command {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 0.75rem 1rem;
  }

  .install-command code {
    background: none;
    color: var(--color-cyan);
    font-size: 0.9rem;
  }

  .copy-btn {
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 4px 8px;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    transition: color 0.2s;
    font-size: 0.75rem;
    border-radius: 4px;
  }

  .copy-btn:hover {
    color: var(--color-text);
  }

  .copy-btn .check-icon,
  .copy-btn .copy-label {
    display: none;
  }

  .copy-btn .copy-icon {
    display: block;
  }

  .copy-btn.copied {
    color: var(--color-cyan);
  }

  .copy-btn.copied .copy-icon {
    display: none;
  }

  .copy-btn.copied .check-icon,
  .copy-btn.copied .copy-label {
    display: block;
  }

  @media (max-width: 640px) {
    .hero-logo {
      width: 120px;
      height: 120px;
    }
  }
</style>

---
const base = import.meta.env.BASE_URL;

const steps = [
  {
    number: '1',
    title: 'Install Clarissa',
    code: 'pnpm install -g clarissa'
  },
  {
    number: '2',
    title: 'Set your API key',
    code: 'export OPENROUTER_API_KEY=your_key_here'
  },
  {
    number: '3',
    title: 'Start chatting',
    code: 'clarissa'
  }
];
---

<section class="quickstart">
  <div class="container">
    <h2 class="section-title">
      <span class="gradient-text">Quick Start</span>
    </h2>
    <div class="steps">
      {steps.map(step => (
        <div class="step">
          <div class="step-number">{step.number}</div>
          <div class="step-content">
            <h3>{step.title}</h3>
            <pre><code>{step.code}</code></pre>
          </div>
        </div>
      ))}
    </div>
    <div class="quickstart-cta">
      <a href={`${base}docs/installation/`} class="btn btn-primary">Full Installation Guide</a>
    </div>
  </div>
</section>

<style>
  .quickstart {
    padding: 4rem 0;
    background: var(--color-bg-secondary);
  }

  .section-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  .steps {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .step {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .step-number {
    width: 40px;
    height: 40px;
    background: var(--gradient);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .step-content {
    flex: 1;
  }

  .step-content h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    margin-top: 0;
    color: var(--color-text);
    line-height: 1.5;
  }

  .step-content pre {
    margin: 0;
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
  }

  .step-content code {
    color: var(--color-cyan);
  }

  .quickstart-cta {
    text-align: center;
    margin-top: 3rem;
  }

  @media (max-width: 640px) {
    .step {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .step-content pre {
      font-size: 0.8rem;
    }
  }
</style>


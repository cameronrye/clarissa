---
import Base from './Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const base = import.meta.env.BASE_URL;

const sidebar = [
  {
    title: 'Getting Started',
    items: [
      { href: `${base}docs/installation/`, label: 'Installation' },
      { href: `${base}docs/configuration/`, label: 'Configuration' },
    ]
  },
  {
    title: 'Features',
    items: [
      { href: `${base}docs/tools/`, label: 'Built-in Tools' },
      { href: `${base}docs/mcp/`, label: 'MCP Integration' },
      { href: `${base}docs/usage/`, label: 'Commands & Usage' },
    ]
  },
  {
    title: 'Reference',
    items: [
      { href: `${base}docs/architecture/`, label: 'Architecture' },
    ]
  },
  {
    title: 'Apple Apps',
    items: [
      { href: `${base}docs/apple/getting-started/`, label: 'Getting Started' },
      { href: `${base}docs/apple/features/`, label: 'Features' },
      { href: `${base}docs/apple/faq/`, label: 'FAQ' },
    ]
  }
];

const currentLabel = sidebar.flatMap(s => s.items).find(item => Astro.url.pathname.includes(item.href.replace(base, '')))?.label || 'Menu';
---

<Base title={title} description={description}>
  <Header />
  <div class="docs-layout container">
    <button class="mobile-sidebar-toggle" id="sidebar-toggle" aria-expanded="false">
      <span class="toggle-label">{currentLabel}</span>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </button>
    <aside class="sidebar" id="sidebar">
      <nav class="sidebar-nav">
        {sidebar.map(section => (
          <div class="sidebar-section">
            <h3>{section.title}</h3>
            {section.items.map(item => (
              <a href={item.href} class:list={['sidebar-link', { active: Astro.url.pathname.includes(item.href.replace(base, '')) }]}>
                {item.label}
              </a>
            ))}
          </div>
        ))}
      </nav>
    </aside>
    <main class="docs-content">
      <article class="prose">
        <slot />
      </article>
    </main>
  </div>
  <Footer />
</Base>

<script>
  const toggle = document.getElementById('sidebar-toggle');
  const sidebar = document.getElementById('sidebar');

  toggle?.addEventListener('click', () => {
    const isOpen = sidebar?.classList.toggle('open');
    toggle.classList.toggle('open');
    toggle.setAttribute('aria-expanded', String(isOpen));
  });
</script>

<style>
  .docs-layout {
    display: grid;
    gap: 2rem;
    padding-top: 1rem;
    padding-bottom: 4rem;
    min-height: calc(100vh - 64px - 300px);
  }

  .mobile-sidebar-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text);
    font-family: inherit;
    font-size: 0.875rem;
    cursor: pointer;
    transition: border-color 0.2s;
  }

  .mobile-sidebar-toggle:hover {
    border-color: var(--color-purple);
  }

  .mobile-sidebar-toggle svg {
    transition: transform 0.2s;
  }

  .mobile-sidebar-toggle.open svg {
    transform: rotate(180deg);
  }

  .sidebar {
    display: none;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1rem;
    margin-top: -1rem;
  }

  .sidebar.open {
    display: block;
  }

  .sidebar-nav {
    position: static;
  }

  .sidebar-section {
    margin-bottom: 1.5rem;
  }

  .sidebar-section:last-child {
    margin-bottom: 0;
  }

  .sidebar-section h3 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .sidebar-link {
    display: block;
    padding: 0.5rem 0;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    border-left: 2px solid transparent;
    padding-left: 1rem;
    transition: all 0.2s;
  }

  .sidebar-link:hover {
    color: var(--color-text);
    border-color: var(--color-purple);
  }

  .sidebar-link.active {
    color: var(--color-cyan);
    border-color: var(--color-cyan);
  }

  .docs-content {
    max-width: 800px;
    min-width: 0;
  }

  .prose h1 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .prose h2 {
    margin-top: 2.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    font-size: 1.375rem;
  }

  .prose h3 {
    font-size: 1.125rem;
  }

  .prose ul, .prose ol {
    padding-left: 1.25rem;
    margin-bottom: 1rem;
    margin-left: 0;
    list-style-position: inside;
  }

  .prose ul {
    list-style-type: disc;
  }

  .prose ul li::marker {
    color: var(--color-purple);
  }

  .prose ol li::marker {
    color: var(--color-cyan);
  }

  .prose li {
    margin-bottom: 0.5rem;
    padding-left: 0;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.8125rem;
    display: block;
    overflow-x: auto;
  }

  .prose th, .prose td {
    padding: 0.5rem 0.75rem;
    text-align: left;
    border: 1px solid var(--color-border);
    white-space: nowrap;
  }

  .prose th {
    background: var(--color-bg-tertiary);
    font-weight: 600;
  }

  @media (min-width: 1024px) {
    .docs-layout {
      grid-template-columns: 220px 1fr;
      padding-top: 2rem;
    }

    .mobile-sidebar-toggle {
      display: none;
    }

    .sidebar {
      display: block;
      background: none;
      border: none;
      padding: 0;
      margin-top: 0;
    }

    .sidebar-nav {
      position: sticky;
      top: 80px;
    }

    .prose h1 {
      font-size: 2.25rem;
    }

    .prose h2 {
      font-size: 1.75rem;
    }

    .prose h3 {
      font-size: 1.25rem;
    }

    .prose table {
      display: table;
    }

    .prose th, .prose td {
      white-space: normal;
    }
  }
</style>


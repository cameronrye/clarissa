# Clarissa AI - Fastlane Configuration
# Screenshot framing for App Store
#
# Screenshot capture is handled by: apple/scripts/capture-screenshots.sh
# Screenshots are stored in: apple/screenshots/

default_platform(:ios)

# Shared configuration
FASTLANE_DIR = File.dirname(__FILE__)
PROJECT_DIR = File.expand_path("..", FASTLANE_DIR)
# Single source of truth for screenshots
SCREENSHOTS_DIR = File.expand_path("../../screenshots", PROJECT_DIR)

desc "Add device frames to all screenshots in apple/screenshots/"
lane :frame do
  frame_screenshots(
    path: SCREENSHOTS_DIR,
    white: false
  )
end

